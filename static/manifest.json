{
  "name": "Global Speed",
  "short_name": "Global Speed",
  "version": "2.1.2",
  "description": "Set a default speed for all videos on Youtube, Netflix, Twitch, Reddit, Hulu, Prime Video, etc.",
  "manifest_version": 2,
  "permissions": ["storage"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"],
    "all_frames": true
  }],
  "icons": { 
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  }
}