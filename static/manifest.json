{
  "name": "Global Speed",
  "short_name": "Global Speed",
  "version": "2.3.1",
  "description": "Set a default speed for all videos.",
  "manifest_version": 2,
  "permissions": ["storage", "https://*/*", "http://*/*", "file://*/*"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": { 
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*", "file://*/*"],
    "js": ["contentScript.js"],
    "all_frames": true
  }],

  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  }
}