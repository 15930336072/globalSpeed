{
  "name": "__MSG_appName__",
  "version": "2.5.4",
  "default_locale": "en",
  "description": "__MSG_appDesc__",
  "manifest_version": 2,
  "permissions": ["storage", "https://*/*", "http://*/*", "file://*/*"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": { 
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*", "file://*/*"],
    "js": ["contentScript.js"],
    "all_frames": true,
    "run_at": "document_start"
  }],
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  }
}